{% extends 'base.html.twig' %}

{% block title %}Mon tableau de bord{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1>
                <i class="bi bi-person-circle" style="font-size: 3rem; color: #0d6efd;"></i>
                Bienvenue, {{ app.user.username|default('Utilisateur') }} !
            </h1>
            <p class="lead">{{ message }}</p>
        </div>
    </div>
    <div class="row justify-content-center g-4">
        <style>
          .dashboard-card {
            transition: transform 0.2s cubic-bezier(.4,2,.6,1), box-shadow 0.2s;
          }
          .dashboard-card:hover {
            transform: translateY(-10px) scale(1.04);
            box-shadow: 0 8px 32px rgba(0,0,0,0.15), 0 1.5px 6px rgba(0,0,0,0.10);
            z-index: 2;
          }
        </style>
        <div class="col-md-3 d-flex">
                <div class="card dashboard-card text-center shadow-sm h-100 w-100 border-success">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <div class="rounded-circle bg-success bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-person-lines-fill" style="font-size: 2rem; color: #198754;"></i>
                    </div>
                    <h5 class="card-title mb-3 fw-bold text-success">Mon profil</h5>
                    <a href="{{ path('app_user_show') }}" class="btn btn-success px-4">Voir</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex">
                <div class="card dashboard-card text-center shadow-sm h-100 w-100 border-warning">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-pencil-square" style="font-size: 2rem; color: #ffc107;"></i>
                    </div>
                    <h5 class="card-title mb-3 fw-bold text-warning">Ã‰diter</h5>
                    <a href="{{ path('app_user_edit') }}" class="btn btn-warning px-4 text-white">Modifier</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex">
                <div class="card dashboard-card text-center shadow-sm h-100 w-100 border-danger">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <div class="rounded-circle bg-danger bg-opacity-10 d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-trash" style="font-size: 2rem; color: #dc3545;"></i>
                    </div>
                    <h5 class="card-title mb-3 fw-bold text-danger">Supprimer</h5>
                    <a href="{{ path('app_user_delete') }}" class="btn btn-danger px-4">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}