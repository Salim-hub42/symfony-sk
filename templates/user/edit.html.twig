{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.prenom|default('Utilisateur') }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark rounded-top-4">
                    <h2 class="mb-0 text-center">üë§ Modifier le profil</h2>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <span style="display:inline-block;width:96px;height:96px;">
                                <style>
                                    .emoji-blink {
                                        font-size: 80px;
                                        animation: blink 1s infinite alternate;
                                        display: inline-block;
                                    }
                                    @keyframes blink {
                                        0% { opacity: 1; filter: drop-shadow(0 0 8px #0931e3); }
                                        100% { opacity: 0.3; filter: drop-shadow(0 0 24px #6efdf6); }
                                    }
                                </style>
                                    <style>
                                        .emoji-rotate {
                                            position: relative;
                                            font-size: 80px;
                                            display: inline-block;
                                        }
                                        .emoji-rotate::before {
                                            content: '';
                                            position: absolute;
                                            left: 0; top: 0;
                                            width: 96px; height: 96px;
                                            border-radius: 50%;
                                            z-index: 0;
                                            background: conic-gradient(#0984e3, #fdcb6e, #00b894, #e17055, #0984e3);
                                            animation: rotateColor 2s linear infinite;
                                        }
                                        .emoji-rotate span {
                                            position: relative;
                                            z-index: 1;
                                            background: #fff;
                                            border-radius: 50%;
                                            padding: 8px;
                                        }
                                        @keyframes rotateColor {
                                            0% { transform: rotate(0deg); }
                                            100% { transform: rotate(360deg); }
                                        }
                                    </style>
                                    <span class="emoji-rotate"><span role="img" aria-label="formulaire">üìù</span></span>
                        </span>
                        <h4 class="mt-3">{{ user.prenom|default('Utilisateur') }} {{ user.nom|default('') }}</h4>
                    </div>
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.password, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Changer le mot de passe'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.roles, 'R√¥les', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.roles) }}
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg text-dark shadow">üíæ Enregistrer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}